<div class="container-fluid">
  <div class="row">
    <div class="card_border">
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table table-hover user_info">
              <thead class="bg-light ">
                <tr>
                  <th><%= t ".fullname" %></th>
                  <th><%= t ".email" %></th>
                  <th><%= t ".amount" %></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><small><%= current_user.fullname %></small></td>
                  <td><small><%= current_user.email %></small></td>
                  <td>
                    <small><%= "#{current_user.money}#{t(".currency")}" %></small>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <table class="table table-hover">
              <thead class="bg-light ">
                <tr>
                  <th><%= t ".match_stt" %></th>
                  <th><%= t ".match" %></th>
                  <th><%= t ".scored" %></th>
                  <th><%= t ".ratio" %></th>
                  <th><%= t ".bet_amount" %></th>
                  <th><%= t ".bet_stt" %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @score_bets %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
