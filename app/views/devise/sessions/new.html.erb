<% provide :title, t(".title") %>
<header class="heading"><%= t ".title" %></header><hr></hr>
<div class="login-form">
  <div class="main-div">
    <div class="panel">
      <h2><%= t ".login" %></h2>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "m-t", id: "login"}) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", id: "inputEmail", placeholder: t(".email") %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: t(".pass") %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span><%= t ".remember" %></span>
          <% end %>
        </div>
      <% end %>
      <div class="forgot">
        <%= link_to t(".forgot_pass"), new_user_password_path %>
      </div>
      <%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
  </div>
  <p>
    <%= t ".new_user" %> <%= link_to t(".signup_now"), new_user_registration_path, class: "botto-text" %>
  </p>
</div>
