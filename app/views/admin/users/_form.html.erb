<%= form_for @user, url: url do |f| %>
  <%= render "shared/admin/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label t ".email", class: "control-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t ".fullname", class: "control-label" %>
    <%= f.text_field :fullname, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t ".password", class: "control-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label t ".money", class: "control-label" %>
    <div class="input-group">
      <%= f.number_field :money, class: "form-control", min: Settings.user.min_length %>
      <span class="input-group-addon"><%= t ".money_unit" %></span>
    </div>
  </div>
  <div class="form-group">
    <%= f.label t ".gender", class: "control-label" %>
    <%= f.select(:gender, Settings.gender, {}, {class: "form-control"}) %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="form-check">
        <label><%= t ".activated" %></label>
        <label class="form-check-label">
          <%= f.check_box :activated, class: "form-check-input" %>
          <span class="form-check-sign"></span>
        </label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-check">
        <label><%= t ".admin" %></label>
        <label class="form-check-label">
          <%= f.check_box :admin, class: "form-check-input" %>
          <span class="form-check-sign"></span>
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <hr />
  </div>
  <div class="form-group submit_button">
    <%= f.submit t(".submit"), class: "btn btn-primary" %>
  </div>
<% end %>
